<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageTitle"
        android:layout_width="190dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/amazon" />

    <TextView
        android:id="@+id/createTextTile"
        android:layout_width="240dp"
        android:layout_height="22dp"
        android:layout_marginTop="32dp"
        android:text="Create Account"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/nameId"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="48dp"
        android:hint="Your Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createTextTile"
        app:layout_constraintWidth_percent="0.9" />

    <EditText
        android:id="@+id/numberOrEmailId"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:hint="Mobile Number or Email"
        app:layout_constraintTop_toBottomOf="@+id/nameId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="24dp" />


    <EditText
        android:id="@+id/passwordId"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOrEmailId"
        app:layout_constraintWidth_percent="0.9" />

    <EditText
        android:id="@+id/reEnterPasswordId"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"

        android:layout_marginTop="36dp"
        android:hint="Re-enter password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordId"
        app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:background="#FFF107"
        android:layout_marginTop="48dp"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reEnterPasswordId"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
